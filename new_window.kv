<CartaValor1Carta>:
	name: "carta_valor1"

	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			orientation: "horizontal"
			size: root.width, root.height

			Button:
				text: "Go Back"
				font_size: 25
				on_release: 
					app.root.current = "home"
					root.manager.transition.direction = "right"

			DrawButton:
				text: "Retirar\n carta"
				font_size: 32
				on_release:
					self.button_click(True)

			Button:
				text: "Next"
				font_size: 25
				on_release: 
					app.root.current = "home"
					root.manager.transition.direction = "right"

		BoxLayout:
			orientation: 'vertical'
			TextInput:
				id: 'id'
				font_size: 32
				hint_text: 'Comentários'

