#: import DrawButton main.DrawButton
#: import add_to_copy main.add_to_copy
#: import copy_to_clickboard main.copy_to_clickboard
#:import Clipboard kivy.core.clipboard.Clipboard

WindowManager:
	FirstWindow:
	OpcoesJogo:
	Instrucoes1Carta:
	Instrucoes2Cartas:
	Instrucoes3Cartas:
	CartaValor1Carta:
	Copiar1Carta:
	CartaValor2Cartas:
	CartaDesafio2Cartas:
	Copiar2Cartas:
	CartaValor3Cartas:
	CartaDesafio3Cartas:
	CartaAcao3Cartas:
